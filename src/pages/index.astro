---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import joeImage from "../content/assets/joei.webp";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("posts");
---

<Layout title="Joe Innes" bg="var(--color-primary-600)">
  <div class="flex flex-col text-white">
    <div
      class="grid flex-col items-center justify-center flex-1 grid-cols-2 gap-2"
    >
      <div
        class="flex-1 p-4 bg-radial from-primary-400 to-70% to-transparent aspect-square grid place-items-center"
      >
        <Image
          class="w-2/3 max-w-[768px]"
          src={joeImage}
          alt="A playful render of Joe working on his laptop with his guitar in the background"
        />
      </div>

      <div class="relative p-4 text-white">
        <h1 class="inline-block mb-6 text-2xl font-semibold md:text-8xl">
          <span class="border-b-[12px] border-accent-300 inline-block pb-1">
            Joe Innes
          </span>
        </h1>

        <p class="mb-4 text-3xl font-light md:text-4xl">Full Stack Developer</p>
        <p class="mb-6 text-xl max-w-[48ch]">
          I build cool stuff, try to leave things better than I found them, and
          learn what I need as I go.
        </p>
        <a
          href="/contact"
          class="px-4 py-2 font-semibold transition duration-300 transform rounded shadow bg-accent-300 text-primary-800 hover:scale-105 hover:bg-accent-100"
        >
          Want to talk?
        </a>
      </div>
    </div>
  </div>
</Layout>
