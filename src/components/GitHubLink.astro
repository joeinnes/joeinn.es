---
export interface Props {
  repo: string;
  pr: string;
}

const { repo, pr } = Astro.props;
---

<div class="github-link">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-github-icon lucide-github"
    ><path
      d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
    ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
  >
  <a href="https://github.com/{repo}/pull/{pr}">{repo}#{pr}</a>
</div>

<style>
  :root {
    --github-brand-color: #181717;
    --github-brand-color-inverse: #ffffff;
  }
  .github-link {
    display: inline-flex;
    gap: var(--inline-spacing);
    align-items: center;
    justify-content: center;
    background-color: color-mix(
      in hsl,
      var(--github-brand-color) 80%,
      var(--background) 20%
    );
    color: var(--background);
    border-radius: var(--border-rounded-full);
    padding: calc(var(--inline-spacing) / 2) var(--inline-spacing);
    transition: background-color 200ms ease-in-out;
    & a {
      margin-block-start: 0;
      color: var(--github-brand-color-inverse);
      text-decoration: none;
    }
    &:hover {
      background-color: color-mix(
        in hsl,
        var(--github-brand-color) 60%,
        var(--background) 40%
      );
    }
  }
</style>
